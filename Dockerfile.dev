FROM python:3.12-slim-bookworm

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    unzip \
    git \
    jq \
    ca-certificates \
    gnupg \
    lsb-release \
    graphviz \
    mandoc \
    && rm -rf /var/lib/apt/lists/*

# Install Terraform
ARG TERRAFORM_VERSION=1.13.5
RUN wget https://releases.hashicorp.com/terraform/${TERRAFORM_VERSION}/terraform_${TERRAFORM_VERSION}_linux_amd64.zip && \
    unzip terraform_${TERRAFORM_VERSION}_linux_amd64.zip && \
    mv terraform /usr/local/bin/ && \
    rm terraform_${TERRAFORM_VERSION}_linux_amd64.zip && \
    terraform --version

# Install inframap
ARG INFRAMAP_VERSION=0.8.0
RUN wget https://github.com/cycloidio/inframap/releases/download/v${INFRAMAP_VERSION}/inframap-linux-amd64.tar.gz && \
    tar -xzf inframap-linux-amd64.tar.gz && \
    chmod +x inframap-linux-amd64 && \
    mv inframap-linux-amd64 /usr/local/bin/inframap && \
    rm inframap-linux-amd64.tar.gz && \
    inframap version

# Install AWS CLI
RUN pip install --no-cache-dir awscli-local[ver1]

WORKDIR /app

EXPOSE 5000

CMD [ "bash" ]
